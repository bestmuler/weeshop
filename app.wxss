/** app.wxss **/

page{
  background: #f4f4f4;
  color: #333;
  font-size: 14px;
  min-height: 100%;
}

view, text, image, navigator, input, button{
  box-sizing: border-box;
}
button::after{
  display: none;
}
.container {
  min-height: 100%;
  box-sizing: border-box;
  background: #f4f4f4;
}

.fixed-bottom {
    position: fixed !important;
    top: auto !important;
    bottom: 0 !important;
}

.list-done {
  display: block;
  width: 100%;
  height: 44px;
  box-sizing: border-box;
  color: #666666;
  font-size: 12px;
  font-weight: normal;
  line-height: 44px;
  text-align: center;
}

.list-empty{
  height: 100%;
  width: 100%;
  padding: 50% 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.list-empty .icon{
  height: 200rpx;
  width: 200rpx;
}

.list-empty .msg{
  line-height: 40rpx;
  font-size: 12px;
  color: #999;
}
