/* login.wxss */
page, .container{
  height: 100%;
  background: #fff;
}

.login{
  padding: 0 30rpx;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #fff;
}
.login .login-logo {
  width: 100%;
  margin: 80rpx auto;
  text-align: center;
}
.login .login-logo .icon{
  width: 320rpx;
  height: 320rpx;
}
.login .input-item{
  width: 690rpx;
  height: 68rpx;
  border: 1px solid #e6e6e6;
  margin: 40rpx 0;
  padding-left: 20rpx;
  line-height: 68rpx;
  font-size: 14px;
  color: #666;
}

.login .submit-btn {
  display: flex;
  margin-top: 40rpx;
  border-radius: 64rpx;
  overflow: hidden;
}
.login .btn-item{
  /* flex-basis: 40%; */
  width: 100%;
  background: #eee;
  /* background-image: linear-gradient(-90deg,#CD3232 0%,rgb(255, 61, 61) 100%); */
  text-align: center;
  font-size: 14px;
  color: #333;
  border-radius: 0;
  border: none;
  transition: all 0.25s linear;
}
.login .link-item{
  margin-top: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
  font-size: 12px;
}

.login .link-item .l{
  float: left;
}

.login .link-item .r{
  float: right;
}
.wechat-login-btn {
  width: 100%;
  position: absolute;
  bottom: 35px;
  left: 0;
  right: 0;
  z-index: 3;
  text-align: center;
}
.wechat-login-btn button {
  display: inline-block;
  width: 64px;
  height: 64px;
  border-radius: 0;
  margin: 0;
  padding: 0;
  background: none;
  border: none;
}
.wechat-login-btn image{
  width: 100%;
  height: 100%;
}