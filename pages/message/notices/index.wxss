/* index.wxss */
.notice-list {
  background: #fff;
  padding: 30rpx;
}

.nl-item {
  border-bottom: 1px solid #eee;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.nl-item .title {
  font-size: 32rpx;
  color: #111;
  line-height: 1.45;
  text-align: center;
}

.nl-item .thumb {
  width: 100%;
  height: 300rpx;
  margin: 20rpx 0;
  -webkit-background-size: cover;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
}

.nl-item .thumb image {
  width: 100%;
  height: 100%;
}

.nl-item .description {
  font-size: 24rpx;
  color: #555;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  justify-content: space-between;
}

.nl-item .description text:last-child {
  flex-shrink: 0;
  white-space: nowrap;
  padding: 0 10rpx;
}
