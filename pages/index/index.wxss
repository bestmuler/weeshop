/** index.wxss **/
.banner-box {
  width: 100%;
  height: 375rpx;
  position: relative;
}

.banner {
  width: 100%;
  height: 375rpx;
  -webkit-background-size: cover;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}

.banner .slide-image {
  width: 750rpx;
  height: 375rpx;
}

.menu {
  width: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  text-align: center;
}

.menu .item {
  width: 25%;
  padding: 30rpx 0;
}

.menu .item.-h {
  background-color: #fafafa;
}

.menu .icon {
  display: inline-block;
  height: 88rpx;
  width: 88rpx;
}

.menu .name {
  display: block;
  font-size: 26rpx;
  color: #888;
}

.notice {
  height: 80rpx;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  border-top: 1px solid #eee;
}

.notice .icon {
  height: 44rpx;
  width: 44rpx;
}

.notice-list {
  width: 80vw;
  margin-left: 20rpx;
  border-left: 1px solid #f4f4f4;
  height: 30rpx;
  flex: 1;
  font-size: 12px;
  padding-left: 20rpx;
  color: #333;
}

.notice-list .swiper_item {
  font-size: 12px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-section {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  margin: 20rpx 0;
}

.goods-section .h {
  height: 100rpx;
  line-height: 100rpx;
  color: #333;
  font-size: 14px;
  text-align: center;
  overflow: hidden;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.goods-section .h.-h {
  background-color: #f0f2f5;
}

.goods-section .b {
  padding: 30rpx 0;
  overflow: hidden;
}

.goods-section .item {
  float: left;
  width: 345rpx;
  margin: 0 10rpx 40rpx;
}

.goods-section .item.-h .thumb {
  opacity: 0.95;
}

.goods-section .thumb {
  width: 345rpx;
  height: 345rpx;
  background-color: #f0f2f5;
}

.goods-section .name {
  margin-top: 10rpx;
  width: 345rpx;
  height: 26px;
  line-height: 26px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 14px;
  color: #333;
  padding: 0 20rpx;  /* text-align: center; */
}

.goods-section .price {
  width: 345rpx;
  height: 20px;
  line-height: 20px;  /* text-align: center; */
  font-size: 14px;  /* font-weight: bold; */
  color: #ea625b;
  overflow: hidden;
  padding: 0 20rpx;
}

.goods-section .origin {
  color: #999;
  font-size: 20rpx;
  text-decoration: line-through;
}

.goods-section .sale {
  float: right;
  color: #999;
  font-size: 20rpx;
}
