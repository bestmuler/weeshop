/* list.wxss */
.order-filter {
  width: 100%;
  height: 90rpx;
}

.order-filter-inner {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 3;
}

.order-list {
  position: relative;
  padding: 30rpx;
}

.list-item {
  position: relative;
  display: block;
  width: 100%;
  background: #fff;
  overflow: hidden;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
}

.list-item .item-header {
  position: relative;
  display: block;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #eee;
  overflow: hidden;
}

.list-item .item-header .header-sn {
  float: left;
  color: #aaa;
}

.list-item .item-header .header-status {
  float: right;
  color: #ff5000;
}

.list-item .item-footer {
  border-top: 1px solid #eee;
  position: relative;
}

.list-item .item-footer .foot-info {
  position: relative;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
  text-align: right;
}

.list-item .item-footer .foot-info .price {
  display: inline;
  color: #333;
  margin-left: 20rpx;
}

.list-item .item-footer .foot-info .price > text {
  font-size: 22rpx;
}

.list-item .item-footer .foot-btns {
  text-align: right;
  padding: 20rpx 0;
  overflow: hidden;
}

.list-item .item-footer .foot-btn {
  display: inline-block;
  vertical-align: top;
  width: 160rpx;
  height: 52rpx;
  line-height: 52rpx;
  border: 1px solid #bbb;
  color: #888;
  margin-right: 20rpx;
  text-align: center;
  font-size: 26rpx;
  border-radius: 6rpx;
}

.list-item .item-footer .foot-btn-main {
  color: #9c27ff;
  border-color: #9c27ff;
}

.order-goods {
}

.order-goods .goods-item {
  position: relative;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  padding: 20rpx;
}

.order-goods .goods-item .item-photo {
  display: block;
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  border-radius: 10rpx;
  border: 1px solid #eee;
  flex-shrink: 0;
}

.order-goods .goods-item .item-photo image {
  width: 100%;
  height: 100%;
}

.order-goods .goods-item .item-info {
  flex-grow: 1;
  padding: 0 0 0 20rpx;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  align-content: space-between;
  flex-wrap: wrap;
}

.order-goods .goods-item .item-info .info-name {
  width: 100%;
  color: #444;
  margin-bottom: 10rpx;
  font-size: 14px;
}

.order-goods .goods-item .item-info .info-attr {
  color: #888;
  font-size: 12px;
  margin-top: 10rpx;
}

.order-goods .goods-item .item-info .info-price {
  width: 100%;
  font-size: 12px;
  color: #666;
  overflow: hidden;
  margin-top: 10rpx;
}

.order-goods .goods-item .item-info .amount {
  float: right;
  color: #333;
  font-size: 14px;
}
