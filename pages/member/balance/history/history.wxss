/* history.wxss */
.history-filter {
  width: 100%;
  height: 100rpx;
}

.history-filter .all-in-one-tabs {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 92rpx;
}

.history-list {
  background: #fff;
}

.hl-item {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hl-item.-h {
  background-color: #f9f9f9;
}

.hl-info {
  flex-grow: 1;
  padding-right: 30rpx;
}

.hl-name {
  font-size: 28rpx;
  color: #666;
  white-space: pre-wrap;
}

.hl-desc {
  font-size: 24rpx;
  color: #999;
  margin: 6rpx 0 12rpx;
}

.hl-date {
  font-size: 22rpx;
  color: #999;
}

.hl-amount {
  flex-shrink: 0;
  white-space: nowrap;
  font-size: 32rpx;
  color: #111;
}

.hl-amount.increase {
  color: #ff5000;
}
