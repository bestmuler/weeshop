.review-goods {
}

.rg-item {
  padding: 0 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.rg-item-head {
  border-bottom: 1px solid #eee;
  padding: 20rpx 0;
  overflow: hidden;
}

.rg-item-head .thumb {
  display: inline-block;
  vertical-align: middle;
  width: 100rpx;
  height: 100rpx;
}

.rg-item-head .thumb image {
}

.rg-item-head .star {
  display: inline-block;
  vertical-align: middle;
  padding: 20rpx;
}

.rg-item-head .star image {
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
  width: 36rpx;
  height: 36rpx;
}

.rg-item-head .star .tip {
  margin-left: 10rpx;
  color: #888;
}

.rg-item-input {
}

.rg-item-input textarea {
  padding: 20rpx;
}

.review-anonymous {
  padding: 20rpx 30rpx;
  text-align: right;
  overflow: hidden;
}

.review-anonymous .sele {
  display: inline-block;
  vertical-align: middle;
}

.review-anonymous .label {
  display: inline-block;
  vertical-align: middle;
  margin-left: 10rpx;
  font-size: 32rpx;
  color: #555;
}

.review-submit {
  padding: 20rpx 30rpx;
}

.review-submit button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}
