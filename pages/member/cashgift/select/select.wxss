/* select.wxss */
@import "../info/info.wxss";

.cl-item.none {
  background: #fff;
  border: 1px solid #eee;
  color: #555;
  font-size: 28rpx;
  text-align: center;
}

.cl-item.none .cl-info {
  display: block;
  border: none;
  padding: 20rpx;
}

/* .cl-item.none .context {
  display: block;
  padding: 0;
  text-align: center;
} */
.cl-info .context .is-active {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  overflow: hidden;
  filter: brightness(1000%);
  z-index: 1;
}

.cl-info .context .is-active image {
  width: 100%;
  height: 100%;
}
