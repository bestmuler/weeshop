/* level.wxss */
.container {
}

.level-head {
  width: 100%;
  background: #9c27ff;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 20rpx;
  padding: 60rpx 30rpx;
}

.lh-avatar {
  display: inline-block;
  position: relative;
  width: 128rpx;
  height: 128rpx;
}

.lh-avatar .ava {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
  border-radius: 3rpx solid rgba(255, 255, 255, 0.35);
}

.lh-avatar .vip {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 64rpx;
  height: auto;
  z-index: 1;
}

.lh-name {
  font-size: 32rpx;
  white-space: nowrap;
  -ms-text-overflow: ellipsis;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 1.9;
}

.lh-score {
}

.level-title {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
  background: #fff;
  font-size: 30rpx;
  color: #222;
  margin-top: 20rpx;
}

.level-progress {
  position: relative;
  background: #fff;
  overflow: hidden;
  padding: 20rpx 30rpx;
}

.lp-size {
  position: relative;
  width: 100%;
  height: 22rpx;
  border-radius: 22rpx;
  overflow: hidden;
  background-color: #eee;
}

.lp-size-w {
  position: absolute;
  top: 0;
  left: 0;
  width: 0;
  height: 22rpx;
  border-radius: 22rpx;
  overflow: hidden;
  transition: width 1.25s linear;
}

.lp-label {
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  align-items: center;
  width: 100%;
  font-size: 20rpx;
  color: #999;
  padding: 60rpx 0 20rpx;
}

.lp-label-item {
  width: 100%;
  text-align: center;
  white-space: nowrap;
}

.lp-desc {
  font-size: 24rpx;
  color: #777;
  text-align: right;
}

.level-desc {
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  background: #fff;
  border-bottom: 1px solid #eee;
  padding: 30rpx;
}

.level-desc .icon {
  width: 56rpx;
  height: 56rpx;
  flex-shrink: 0;
}

.level-desc .contxt {
  flex-grow: 1;
  padding: 0 20rpx;
}

.level-desc .name {
  font-size: 28rpx;
  color: #555;
}

.level-desc .desc {
  font-size: 26rpx;
  color: #888;
}

.level-desc .desc text {
  color: #9c27ff;
}
