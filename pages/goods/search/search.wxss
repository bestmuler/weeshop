.search-hot-box {
  margin-bottom: 20rpx;
  background: #fff;
  padding: 20px 30rpx;
}

.search {
  width: 100%;
  padding: 30rpx 0;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.search .form {
  height: 60rpx;
  width: 100%;
  margin: 0 30rpx;
  padding: 0 20rpx;
  background: #f4f4f4;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search .form  > input {
  height: 40rpx;
  width: calc(100% - 40rpx);
}

.search .form  .btn {
  height: 40rpx;
  width: 40rpx;
}

.search-mo-title {
  font-size: 14px;
  margin-bottom: 20rpx;
}

.search-history-box .search-mo-title {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
}

.search-mo-title > text {
  display: inline-block;
  color: #333;
}

.search-mo-title .hot {
  display: inline-block;
  vertical-align: top;
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.search-hot-item {
}

.search-hot-item text {
  display: inline-block;
  font-size: 12px;
  color: #666;
  padding: 15rpx 20rpx;
  border: 1px solid #eee;
  -webkit-border-radius: 10rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.search-hot-item.-h {
  background-color: #f9f8f9;
}

.search-history-box {
  background: #fff;
}

.search-history-item {
  font-size: 12px;
  color: #333;
  border-bottom: 1px solid #eee;
  padding: 20rpx 30rpx;
}

.search-history-item image {
  vertical-align: top;
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.search-history-item.-h {
  background-color: #f9f8f9;
}

.search-history-clear {
  color: #999;
  padding: 30rpx;
  font-size: 14px;
  text-align: center;
}
