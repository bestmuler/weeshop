.sort-wrap {
  background: #fff;
  width: 100%;
  height: 78rpx;
}

.sort-box {
  position: fixed;
  top: 0;
  z-index: 1000;
  background: #fff;
  width: 100%;
  height: 78rpx;
  overflow: hidden;
  padding: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #d9d9d9;
}

.sort-box .item {
  text-align: center;
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

.sort-box .item .txt {
  display: inline-block;
  vertical-align: top;
  height: 78rpx;
  line-height: 78rpx;
}

.sort-box .item .ico {
  display: inline-block;
  vertical-align: top;
  width: 20rpx;
  height: 78rpx;
  margin: auto 10rpx;
  background: url('data:image/svg+xml;base64,') center center no-repeat;
  background-size: 20rpx;
}

.sort-box .item.down-lst.active .ico {
  transform: rotate(180deg);
}

.sort-box .item.active .txt {
  color: #b4282d;
}

