.sort-downlst {
  position: fixed;
  top: 78rpx;
  left: 0;
  right: 0;
  z-index: 1000;
}

.sort-downlst .sort-down-li {
  color: #333;
  font-size: 16px;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
  background: #fff;
}

.sort-downlst .sort-down-li.active {
  color: #9c27ff;
}

.goods-list {
  width: 100%;
  height: auto;
  padding: 0;
  overflow: hidden;
  background: #fff;  /* margin-bottom: 20rpx; */
}

.goods-list .gl-item {
  width: 100%;
  margin: 0;
  padding: 20rpx 0;
  overflow: hidden;
  border-bottom: 1px solid #eee;
  position: relative;
}

.goods-list .gl-item.-h {
  background-color: #eee;
}

.goods-list .gl-item.-h .thumb {
  opacity: 0.85;
}

.gl-item .item-l {
  float: left;
  width: 200rpx;
}

.gl-item .item-r {
  float: left;
  width: calc(100% - 200rpx);
}

.gl-item .thumb {
  width: 200rpx;
  height: 200rpx;
  background-color: #f0f2f5;
}

.gl-item .name {
  margin-top: 10rpx;
  width: 100%;
  min-height: 82rpx;
  font-size: 16px;
  color: #333;
  padding: 0 20rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.gl-item .price {
  width: 100%;
  font-size: 40rpx;
  color: #ea625b;
  overflow: hidden;
  padding: 10rpx 20rpx;
}

.gl-item .origin {
  color: #999;
  font-size: 22rpx;
  text-decoration: line-through;
}

.gl-item .item .desc {
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.gl-item .sale {
  color: #999;
  font-size: 24rpx;
  padding: 5rpx 20rpx;
}

.gl-item .tags {
  position: absolute;
  top: 0;
  right: 10rpx;
  z-index: 1;
}

.gl-item .discount, .gl-item .promo {
  display: inline-block;
  font-size: 24rpx;
  background: #f6c230;
  color: #fff;
  width: 30rpx;
  height: 30prx;
  line-height: 30rpx;
  text-align: center;
  margin-left: 10rpx;
}

.gl-item .discount {
  background: #9c27ff;
}

.gl-item .score, .gl-item .shipping {
  border: 1px solid #fd1e57;
  color: #fd1e57;
  font-size: 20rpx;
  border-radius: 6rpx;
  width: 48rpx;
  height: 24rpx;
  line-height: 24rpx;
  text-align: center;
  overflow: hidden;
  margin: 2rpx 6rpx;
  padding: 1rpx 4rpx;
}

.gl-item .score {
  border-color: #01cd9a;
  color: #01cd9a;
}

.gl-item .comm {
  float: right;
}
